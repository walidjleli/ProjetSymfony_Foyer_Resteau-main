{% extends 'backtemplates/baseback2.html.twig' %}

{% block body %}
    <div class="container mt-4" style="margin-left: 20%; margin-top: 400px; padding-top: 80px;">
        <h1>Modifier l'équipement - {{ equipement.nomEquipementB }}</h1>

        {# Message flash pour les succès ou les erreurs #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {# Formulaire d'édition de l'équipement #}
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="row mb-3">
            <label for="{{ form.nomEquipementB.vars.id }}" class="col-sm-2 col-form-label">{{ form.nomEquipementB.vars.label }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.nomEquipementB, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.nomEquipementB.vars.errors %}
                    <div class="alert alert-danger solid alert-rounded mt-2">
                        <strong>Error!</strong> {{ error.message }}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="row mb-3">
            <label for="{{ form.etatEquipementB.vars.id }}" class="col-sm-2 col-form-label">{{ form.etatEquipementB.vars.label }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.etatEquipementB, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.etatEquipementB.vars.errors %}
                    <div class="alert alert-danger solid alert-rounded mt-2">
                        <strong>Error!</strong> {{ error.message }}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="row mb-3">
            <label for="{{ form.dateDernierEntretienEquipementB.vars.id }}" class="col-sm-2 col-form-label">{{ form.dateDernierEntretienEquipementB.vars.label }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.dateDernierEntretienEquipementB, {
                    'attr': {'class': 'form-control', 'placeholder': 'dd-mm-yyyy'}
                }) }}
                {% for error in form.dateDernierEntretienEquipementB.vars.errors %}
                    <div class="alert alert-danger solid alert-rounded mt-2">
                        <strong>Error!</strong> {{ error.message }}
                    </div>
                {% endfor %}
            </div>
        </div>

        {# Ajout du champ pour la chambre associée #}
        <div class="row mb-3">
            <label for="{{ form.chambre.vars.id }}" class="col-sm-2 col-form-label">{{ form.chambre.vars.label }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.chambre, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.chambre.vars.errors %}
                    <div class="alert alert-danger solid alert-rounded mt-2">
                        <strong>Error!</strong> {{ error.message }}
                    </div>
                {% endfor %}
            </div>
        </div>

        {# Gestion de l'image de l'équipement #}
        <div class="row mb-3">
            <label for="{{ form.image.vars.id }}" class="col-sm-2 col-form-label">Image de l'équipement :</label>
            <div class="col-sm-10">
                {% if equipement.image %}
                    <img src="{{ asset('uploads/equipements/' ~ equipement.image) }}" alt="Image de {{ equipement.nomEquipementB }}" width="100" class="mb-3">
                {% else %}
                    <p>Aucune image actuelle</p>
                {% endif %}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.image.vars.errors %}
                    <div class="alert alert-danger solid alert-rounded mt-2">
                        <strong>Error!</strong> {{ error.message }}
                    </div>
                {% endfor %}
            </div>
        </div>

        {# Boutons modifiés avec les styles personnalisés #}
        <div class="card-body">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications
                <span class="btn-icon-right"><i class="fa fa-save"></i></span>
            </button>
            <a href="{{ path('app_equipement') }}" class="btn btn-secondary">Annuler
                <span class="btn-icon-right"><i class="fa fa-times"></i></span>
            </a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
