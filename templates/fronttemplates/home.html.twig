{% extends 'fronttemplates/basefront.html.twig' %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Mon Site</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <!-- Ajoutez d'autres liens ici -->
            </ul>
            <!-- Boutons pour les catégories -->
            <div class="d-flex">
                <a class="btn btn-outline-primary me-2" href="{{ path('app_front_chambre') }}">Chambres</a>
                <a class="btn btn-outline-secondary me-2" href="{{ path('app_front_equipement') }}">Equipements</a>
                <a class="btn btn-outline-success" href="{{ path('app_frontend_services') }}">Services</a>
            </div>
        </div>
    </div>
</nav>


    {% if user_id is not null and username is not null %}
        <h1>Bienvenue, {{ username }} !</h1>
        <p>Votre ID utilisateur est : {{ user_id }}</p>

        <form action="{{ path('app_logout') }}" method="post">
            <button type="submit">Se déconnecter</button>
        </form>
    {% else %}
        <h1>Bienvenue sur notre page d'accueil</h1>
        <p>Veuillez vous connecter ou vous inscrire pour accéder à plus de fonctionnalités.</p>
        <a href="{{ path('app_login') }}">Se connecter</a>
        <a href="{{ path('app_register') }}">Créer un compte</a>
    {% endif %}
{% endblock %}